<%= stylesheet_link_tag    'application'%>
<%@name={"notice"=>"공지사항","free"=>"자유게시판","member"=>"회원게시판","graduate"=>"HAS게시판","sameage"=>"기수별게시판"}%>
<%post = @article[@id]%>
<section id="main-slider" class="sub carousel" data-spy="affix" data-offset-top="140">
  <div class="black-glass"></div>
  <div class="navigation-bar"><%=@navigation.html_safe%></div>
    <div class="carousel-inner">
        <div class="item active">
            <div class="container">
                <div class="carousel-content">
                    <h1 style="text-transform: capitalize;"><%=@name[@usage]%></h1>
                </div>
            </div>
        </div><!--/.item-->
    </div><!--/.carousel-inner-->
</section><!--/#main-slider-->
<div class="container box button-list">
<%if @id == -1%>

<%elsif  post == nil%>
<div>해당 주소에 글이 없습니다</div>
<a href="/create?sended=<%=@category%>/<%=@usage%>">새글 쓰기</a>
<%else%>
  <div class="article fr-view ">
    <!--제목 시작-->
    <h3 style="display:inline-block"><%=post.title%></h3>
    <span> - <%=post.member.senior_number%>기 <%=post.member.username%></span>
    <!--수정 버튼-->
    <% if can? :update, post %>
    <form action="/create" method="post" style="display:inline-block">
      <input type="hidden" name="sended" value="<%=@category%>/<%=@usage%>">
      <input type="hidden" name="title" value="<%=post.title%>">
      <input type="hidden" name="content" value="<%=post.content%>">
      <input type="hidden" name="id" value="<%=post.id%>">
      <button type="submit" class="glyphicon glyphicon-edit" aria-hidden="true" style="border:none;background:none"></button>
    </form>
    <%end%>
    <!--삭제 버튼-->
    <% if can? :destroy, post %>
    <form action="/<%=@category%>/<%=@usage%>/write" method="post" style="display:inline-block">
      <input type="hidden" name="usage" value="delete">
      <input type="hidden" name="id" value="<%=post.id%>">
      <button type="submit" class="glyphicon glyphicon-remove" aria-hidden="true" style="border:none;background:none" data-confirm="삭제 하시겠습니까?"></button>
    </form>
    <% end %>
    <div style="float:right">
      <span class='hidden-xs' style="display:inline-block!important"><%=post.created_at.strftime("%Y.")%></span>
      <%=post.created_at.strftime("%m.%d")%>
    </div>
    <hr>
    <!--본문 시작-->
    <%=post.content.html_safe%>
  </div>
  <!--댓글 시작-->
  <%= commontator_thread(post) %>
  <hr>
<%end%>
<!--게시글 목록 시작-->
<table class="table table-hover article_list">
  <thead>
    <tr>
      <th>#</th>
      <th>제목</th>
      <th>글쓴이</th>
      <th>날짜</th>
    </tr>
  </thead>
  <tbody>
    <%@article_page.each do |article|%>
    <tr>
      <th scope="row"><%=@article.index(article)+1%></th>
      <td><a href="/<%=@category%>/<%=@usage%>/<%=@article.index(article)%>"><%=article.title%></a></td>
      <td><%=article.member.senior_number%><span class='hidden-xs'>기 </span><%=article.member.username%></td>
      <td><span class='hidden-xs'><%=@article[@article.index(article)].created_at.strftime("%Y.")%></span><%=@article[@article.index(article)].created_at.strftime("%m.%d")%></td>
    </tr>
    <%end%>
  </tbody>
</table>
<!--게시글 목록 끝-->
<% if (can? :create, post.class) || post == nil %>
<a href="/create?sended=<%=@category%>/<%=@usage%>" style="float:right">새글 쓰기</a>
<%end%>
<nav aria-label="Page navigation" style="text-align: center;">
  <%= will_paginate @article_page, previous_label: "<", next_label: ">" %>
</nav>
</div>

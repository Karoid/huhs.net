<!--게시글 목록 시작-->
    <%@article_page.each do |article|%>
		<a href="/board/<%=article.board.category.route%>/<%=article.board.route%>/<%=article.id%>">
		<div class="container1 <%if article.id == params[:id].to_i %>selected<%end%>">
			<div class="photo">
				<%if article.uploadfiles.take%>
				<img src="<%=article.uploadfiles.take.url%>" align="center">
				<%end%>
			</div>
			<div class="text">
				<%=article.title%> - <span class='hidden-xs'><%=article.created_at.strftime("%Y.")%></span><%=article.created_at.strftime("%m.%d")%>
			</div>
		</div>
		</a>
    <%end%>
		<hr style="clear:both">
<!--게시글 목록 끝-->
<% if (can? :create, @article.last)%>
<a href="/board/<%=@category.route%>/<%=@board.route%>/create" style="float:right">새글 쓰기</a>
<%end%>
<nav aria-label="Page navigation" style="text-align: center;">
  <%= will_paginate @article_page, previous_label: "<", next_label: ">" %>
</nav>

<style type="text/css">
	.container1 {
		padding: 10px;
		margin: 0px 20px 20px 0px;
		border: 1px solid #aaaaaa;
		background-color: #dddddd;
		display: inline-block;
		float: left;
	}

	.photo {
		width: 100%;
		margin-bottom: 12px;
		display: block;
	}

	.photo img {
		height: 150px;
	}

	.text {
		width: 100%;
		height: 23px;
		margin: 0px auto;
		padding-top: 5px;
		border-top: 1px solid #000000;
		display: block;
		float: left;
		text-align: center;
	}
</style>

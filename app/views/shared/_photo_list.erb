<div id="title_small">휴즈의 추억이 담긴 사진들이 모여 있는 사진첩입니다</div>
<% if (can? :create, @article.last)%>
	<input type="button" id="write" value="사진 업로드" style="padding: 0;" onclick="location.href='/board/<%=@category.route%>/<%=@board.route%>/create'">
<%end%>
<!--게시글 목록 시작-->
	<div id="wrapper">
	    <%@article_page.each do |article|%>
			<a href="/board/<%=article.board.category.route%>/<%=article.board.route%>/<%=article.id%>">
				<div class="container1">
					<div class="photo">
						<%if article.uploadfiles.take%>
							<img src="<%=article.uploadfiles.take.url%>" align="center">
						<%end%>
					</div>
					<div class="text">
						<span><span><%=truncate(article.title, :length => 20)%></span><%=article.created_at.strftime("%Y.%m.%d")%></span>
					</div>
				</div>
			</a>
	    <%end%>
	    <br style="clear: both;">
	</div>
		<hr style="clear:both">
<!--게시글 목록 끝-->
<nav aria-label="Page navigation" style="text-align: center;">
  <%= will_paginate @article_page, previous_label: "<", next_label: ">" %>
</nav>

<style type="text/css">
	#title_small {
		width: 100%;
		font-size: 16px;
		text-align: center;
	}

	#wrapper {
		text-align: center;
	}
	#wrapper a {
		margin: 0 10px 5px 0;
		display: inline-block;
	}

	#write {
		width: 110px;
		height: 40px;
		margin: 30px auto 40px auto;
		border: 1px solid #dddddd;
		background-color: #ffffff;
 		display: block;
 		text-align: center;
 		font-size: 18px;
	}

	.container1 {
		width: 190px;
		height: 190px;
		border: 1px solid #aaaaaa;
		background-color: #dddddd;
		display: inline-block;
		position: relative;
	}

	.photo {
		width: 100%;
		height: 100%;
		padding: 0px;
		display: block;
		overflow: hidden;
		line-height: 188px;
	}

	.photo img {
		width: 100%;
		height: auto;
	}

	.text {
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.3);
		position: absolute;
		top: 0%;
		left: 0%;
		display: table;
		overflow: hidden;
		text-overflow: ellipsis;
		word-break: keep-all;
	}
	.text span {
		width: 188px;
		text-align: center;
		display: table-cell;
		vertical-align: middle;
		color: #ffffff;
	}

	.text span span {
		font-size: 25px;
	}
	@media only screen and (max-width: 768px) {
		#wrapper a{
			margin: 0 1vw 1vw 0;
		}
		#wrapper a .container1{
			width:48vw;
			height: 48vw;
		}
	}
</style>

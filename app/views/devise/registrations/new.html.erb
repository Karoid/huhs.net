<div id="login">
	<div id="login_logo">
    <span>회원가입</span>
		휴즈 회원, 졸업자용 가입 페이지입니다
	</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field form-group">
    <label for="username">본인의 이름</label>
    <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field form-group">
    <label for="senior_number">기수</label>
    <%= f.number_field :senior_number,min: 1, max: 100, autofocus: true %>기
  </div>

  <div class="field form-group">
    <label for="tel">전화 번호(-없이 입력)</label>
    <%= f.telephone_field :tel, autofocus: true %>
  </div>

  <div class="field form-group">
    <label for="tel">학부생일때 제1전공</label>
    <%= f.select :major_id, Major.all.collect {|p| [ p.name, p.id ] } %>
  </div>

  <div class="field form-group">
    <label for="password">비밀번호</label>
    <%= f.password_field :password,placeholder: "("+@minimum_password_length.to_s+" 자 이상)", autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <label for="password">비밀번호 확인</label>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "가입하기", class: "button_register" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>

<style>
#login {
  margin: 50px auto;
  text-align: center;
}

#login_logo {
  margin: 0 auto 50px;
  color: #62E0DD;
  text-align: center;
  font-size: 27px;
}
#login_logo span {
  display: block;
  color: rgb(90, 210, 210);
  font-size: 50px;
  font-weight: bolder;
}
label{
  display: inline-block;
  width: 150px;
  max-width: 40vw;
}
form{
  max-width: 400px;
  text-align: left;
  margin: 0 auto;
  padding: 0 20px;
}
input, select{
  border: none;
  border-bottom: 1px solid;
  max-width: 40vw;
}
input:focus{
  border: none;
  border-bottom: 2px solid rgb(90, 210, 210);
}
.button_register {
  width: 272px;
  height: 50px;
  margin: 30px auto 15px;
  border: 1px #79E8E6 solid;
  border-radius: 7px;
  text-align: center;
  line-height: 40px;
  font-size: 20px;
  font-weight: bolder;
  display: block;
  background-color: #79E8E6;
  color:white;
}
</style>
